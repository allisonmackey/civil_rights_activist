<h1>Welcome!</h1>

<p>A mission statement will go here!</p>

<p>"<%= @random_quote['content'] %>"</p>
<p>- <%= @random_quote['author'] %></p>
<br>
<button class = "btn btn-dark"><%= link_to "Get Quote", root_path %></button>
<br>

<div class="search-bar">
  <form>
    <input type="text" class="form-control" name ="search_term" id="search">
    <button type= "submit" class= "btn btn-dark">Search</button>
  <form>
</div>

<div class = "search_results">
  <% if @results.any? %>
    <%@results.each do |result| %>
      <p>"<%= result['content'] %>"</p>
      <p>- <%= result['author'] %></p> 
      <br>
    <% end %>
  <% elsif @results.length == 0 %>
    <p>Your search did not return any results!</p>
  <% end %>
</div>

